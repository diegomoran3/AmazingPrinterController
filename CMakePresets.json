{
  "version": 8,
  "configurePresets": [
    {
      "name": "windows-msvc",
      "displayName": "Windows MSVC Build",
      "description": "Build on Windows using MSVC + vcpkg",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/out/build/windows",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "C:/Users/diego/source/repos/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },

    {
      "name": "linux-gcc",
      "displayName": "Linux GCC Build",
      "description": "Sets Ninja generator, build and install directory",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_TOOLCHAIN_FILE": "/home/diego/sources/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    }
  ]
}
